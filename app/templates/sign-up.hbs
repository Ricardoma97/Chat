<div class='page-header'>
    <h1>Sign Up</h1>
</div>
{{input
    type='text'
    class='form-control'
    value=username
    placeholder='username'
}}
{{input
    type='text'
    class='form-control'
    value=email
    placeholder='email'
}}
{{input
    type='password'
    class='form-control'
    value=password
    placeholder='password'
}}
<button
    class='btn btn-default'
    {{action 'signUp' email password username 'password'}}
>Sign up
</button>